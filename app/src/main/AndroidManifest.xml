<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shirokuma.musicplayer"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <!-- Audio/lyrics search and play -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/kumalrc_icon"
        android:theme="@style/kumalrc_theme"
        android:name=".KumalrcApplication">
        <activity
            android:screenOrientation="portrait"
            android:name=".WelcomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".list.MusicListActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".lyrics.LyricsActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:screenOrientation="portrait"
            android:name=".GuideActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <service android:name=".playback.MusicService" />
        <activity
            android:screenOrientation="portrait"
            android:theme="@style/timer_dialog"
            android:name=".Setting.TimerActivity" />

        <receiver android:name=".playback.MusicBroadcast" />
    </application>

</manifest>
