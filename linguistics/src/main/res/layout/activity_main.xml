<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <com.shirokuma.musicplayer.view.TopBar
            style="@style/head"
            android:id="@+id/head"
            android:src="@mipmap/ic_launcher"
            android:layout_width="match_parent"
            android:layout_height="52dp"/>

    <ScrollView
            android:layout_below="@id/head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context=".MainActivity">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    style="@style/func"
                    android:layout_height="120dp"
                    android:id="@+id/listen"
                    android:text="@string/listening"/>

            <LinearLayout
                    android:padding="8dp"
                    android:background="@drawable/rice2null"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                <TextView
                        style="@style/textButton"
                        android:id="@+id/word"
                        android:drawableTop="@drawable/card"
                        android:text="@string/learn"/>

                <TextView
                        style="@style/textButton"
                        android:id="@+id/redact"
                        android:drawableTop="@drawable/redact"
                        android:text="@string/redact"/>

                <TextView
                        style="@style/textButton"
                        android:id="@+id/restore"
                        android:drawableTop="@drawable/back"
                        android:text="@string/restore"/>

                <TextView
                        style="@style/textButton"
                        android:id="@+id/import_data"
                        android:drawableTop="@drawable/fill"
                        android:text="@string/import_from"/>

                <TextView
                        style="@style/textButton"
                        android:id="@+id/backup"
                        android:drawableTop="@drawable/copy"
                        android:text="@string/backup"/>
            </LinearLayout>

            <LinearLayout
                    android:padding="8dp"
                    android:background="@drawable/rice2null"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                <TextView
                        android:visibility="gone"
                        style="@style/textButton"
                        android:id="@+id/create_shortcut"
                        android:drawableTop="@drawable/plus"
                        android:text="@string/create_shortcut"/>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>
</RelativeLayout>
