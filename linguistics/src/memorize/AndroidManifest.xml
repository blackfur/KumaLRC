<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        >

    <application>

        <meta-data
                android:name="AA_MODELS"
                android:value="com.shiro.memo.model.Entry"/>

        <activity
                android:name="com.shiro.memo.FlashCardActivity"
                android:exported="true"
                android:label="@string/app_name">
        </activity>
        <activity
                android:name="com.shiro.memo.RedactActivity"
                android:exported="true"
                android:label="@string/redact"
                android:launchMode="singleTask"/>

        <receiver android:name="com.shiro.linguistics.widget.RedactWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/redact_widget_info"/>
        </receiver>
        <receiver android:name="com.shiro.linguistics.widget.WordWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/word_widget_info"/>
        </receiver>
    </application>

</manifest>
