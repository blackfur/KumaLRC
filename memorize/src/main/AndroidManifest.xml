<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.shiro.memo">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
            android:name=".MemoApp"
            android:allowBackup="true"
            android:icon="@drawable/snowflake64"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">

        <meta-data
                android:name="AA_DB_NAME"
                android:value="memo.db"/>
        <meta-data
                android:name="AA_DB_VERSION"
                android:value="1"/>
        <meta-data
                android:name="AA_MODELS"
                android:value="com.shiro.memo.model.Entry"/>

        <activity
                android:name=".FlashCardActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:label="@string/redact"
                android:name=".RedactActivity"/>
        <activity
                android:name=".FuncActivity"
                android:label="@string/func"/>
    </application>

</manifest>
